<p id="notice"><%= notice %></p>

<h1>Listing Variants</h1>

<table>
  <thead>
    <tr>
      <th>Variant inid</th>
      <th>Sku</th>
      <th>Cost price</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Weight</th>
      <th>Opt title</th>
      <th>Product</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variants.each do |variant| %>
      <tr>
        <td><%= variant.variant_inid %></td>
        <td><%= variant.sku %></td>
        <td><%= variant.cost_price %></td>
        <td><%= variant.price %></td>
        <td><%= variant.quantity %></td>
        <td><%= variant.weight %></td>
        <td><%= variant.opt_title %></td>
        <td><%= variant.product_id %></td>
        <td><%= variant.supplier_id %></td>
        <td><%= link_to 'Show', variant %></td>
        <td><%= link_to 'Edit', edit_variant_path(variant) %></td>
        <td><%= link_to 'Destroy', variant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

