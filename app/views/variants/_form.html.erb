<%= simple_form_for(@variant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :variant_inid %>
    <%= f.input :sku %>
    <%= f.input :cost_price %>
    <%= f.input :price %>
    <%= f.input :quantity %>
    <%= f.input :weight %>
    <%= f.input :opt_title %>
    <%= f.input :product_id %>
    <%= f.input :supplier_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
